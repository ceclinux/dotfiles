[colors]
background = #003333
background-alt = #444
foreground = #dfdfdf
foreground-alt = #555
primary = #ffb52a
secondary = #e60053
alert = #bd2c40


[bar/bottom]
include-file = $HOME/.config/polybar/bars_common
bottom = true

include-file = $HOME/.config/polybar/font_config

modules-left =
modules-right = filesystem xbacklight xkeyboard wlan


[bar/top]
include-file = $HOME/.config/polybar/bars_common
bottom = false

include-file = $HOME/.config/polybar/font_config

modules-left = switch_monitor i3 xwindow
modules-center = mpd
modules-right = volume memory cpu battery temperature date

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%
format-background=#009940

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock

format-prefix = "ÔÑú "
